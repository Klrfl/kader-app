<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hai</title>

    <style>
    body {
      margin: 0;
    }

    @media print {
      body {
        margin: 0;
      }

      .no-print {
        display: none;
      }
    }

    header {
      padding: 1rem 1.5rem;
    }

    img {
      display: block;
      max-width: 100%;
      width: 3cm;
      height: 4cm;
      object-fit: cover;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, 3cm);
    }

    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    </style>
  </head>

  <body>
    <header class="no-print">
      <h1>Kader app</h1>
      <p>Showing <%= files.length %> photos</p>

      <form action="/" method="get">
        <label for="group">Choose group to display, select none to display all</label>

        <select id="group" name="group">
          <% groups.forEach(g => { %>
            <option value="<%= g%>"><%= g %></option>
          <% }) %>
        </select>

        <button type="submit">submit</button>
      </form>
    </header>

    <ul class="grid">
    <% files.forEach((f) => { %>
      <li>
        <img src="<%= f %>" alt="<>"/> 
      </li>
    <% }) %>
    </ul>
  </body>
</html>
